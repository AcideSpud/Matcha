<% include header2 %>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>Votre Profile</h1>
    
    <script>
    function cloneAsObject(obj) {
    if (obj === null || !(obj instanceof Object)) {
        return obj;
    }
    var temp = (obj instanceof Array) ? [] : {};
    // ReSharper disable once MissingHasOwnPropertyInForeach
    for (var key in obj) {
        temp[key] = cloneAsObject(obj[key]);
    }
    return temp;
}

    if(navigator.geolocation){
        console.log('GEO PAS FORCe')
        navigator.geolocation.getCurrentPosition(function(position){
            console.log(JSON.stringify(cloneAsObject(position.coords)));
            $("#geoResult").val(JSON.stringify(cloneAsObject(position.coords)));
        })
    }
    else{
        console.log('GEO FORCE');
         $.getJSON("http://ip-api.com/json/?callback=?", function(data) {
            $("#geoResult").val(JSON.stringify(data));
            console.log(JSON.stringify(data))
        });
        }
    </script>

    <!-- LOGIN FORM -->
    <form action="compte/form_compte" method="post">

