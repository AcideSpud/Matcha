            </select>
            </br>
            <input type="text" class="form-control" name="repQuestion" required="required" placeholder="Réponse"/>
        </div>
        <hr>
        <div class="form-group">
            <span id="status"></span>
        </div>
        <button type="submit" class="btn btn-danger">Signup</button>
    </form>
</div>
