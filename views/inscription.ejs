<% include header2 %>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
<div class="jumbotron text-center"  style="box-shadow: 5px 3px 10px rgb(0,7,5);padding:40px;">
    <h2><span class="fa fa-sign-isn"></span>Inscription</h2>
    <form id="inscri" action="inscription2/form_inscription2" method="post">
        <div class="form-group">
            <input type="text" class="form-control" id="email" name="email" required="required" placeholder="Email">
