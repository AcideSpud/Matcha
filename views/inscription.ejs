<% include header2 %>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>Inscription</h1>
    <!-- LOGIN FORM -->
    <form action="inscription/form_inscription" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="pwd">
        </div>
         <div class="form-group">
            <label for="name">Nom d'utilisateur</label>
            <input type="name" class="form-control" id="name" name="name">
        </div>
    <div class="form-group">
            <label for="sel1">Question secrete</label>
            <select  class="form-control" name="questionSecrete" id="sel1">
                <option name="q1">Quel est votre animal preféré?</option>
                <option name="q2">Quel est votre couleur preféré?</option>
                <option name="q3">Quel est votre pays preféré?</option>
                <option name="q4">Quel est votre fromage preféré?</option>
            </select>
            </br>
            <input type="text" class="form-control" name="repQuestion"/>
        </div>
        <hr>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>
    <p>Vous avez deja un compte? <a href="/login">Login</a></p>
</div>
</div>
<%include footer %>
